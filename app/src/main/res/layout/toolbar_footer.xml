<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mycomms="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    mycomms:theme="@style/ActionBarThemeOverlay"
    android:gravity="top"
    android:background="@color/grey_toolbar"
    mycomms:titleTextAppearance="@style/ActionBar.TitleText">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/footer_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_tabbar_contacts_unselected"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/footer_dashboard"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_tabbar_quickaction_unselected"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/footer_profile"
            android:layout_toEndOf="@+id/footer_profile"
            android:layout_centerVertical="true"
            android:layout_marginLeft="105dp"/>

        <ImageView
            android:id="@+id/footer_coming_soon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_create_event_date_time"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</android.support.v7.widget.Toolbar>
