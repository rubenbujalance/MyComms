<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mycomms="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    mycomms:contentInsetEnd="0dp"
    mycomms:contentInsetStart="0dp"
    android:gravity="top"
    mycomms:titleTextAppearance="@style/ActionBar.TitleText"
    android:transitionGroup="true"
    android:touchscreenBlocksFocus="true"
    android:background="#ff575757">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/footer_contacts_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/footer_contacts"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/btncontacts"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacts"
                    android:id="@+id/textView9"
                    android:textColor="@color/grey_light" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/footer_dashboard_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey_dark"
            android:gravity="center_horizontal">
            <ImageView
            android:id="@+id/footer_dashboard"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/land"
                android:focusable="true" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/footer_recents_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:id="@+id/footer_recents"
                    android:background="@drawable/imessage"
                    android:focusable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:id="@+id/textView10"
                    android:textColor="@color/grey_light" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.Toolbar>
