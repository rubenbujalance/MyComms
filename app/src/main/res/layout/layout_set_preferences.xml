<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_platform"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:textColor="@color/contact_soft_grey"
                android:text="@string/availability" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/profile_lay_separator"
            >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/button_settings_vacation_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:orientation="horizontal">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/settings_preferences_vacation_time_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_vacation_time_activity_title"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        fontPath="fonts/SourceSansPro-Semibold.ttf"
                        android:layout_gravity="center"
                        android:textColor="@color/text_dark_color"
                        />
                </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:layout_gravity="center"
                              android:gravity="end"
                    >

                    <TextView
                        android:id="@+id/settings_preferences_vacation_time_value"
                        android:layout_width="129dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:text="@string/settings_label_vacation_time_not_set"
                        />

                    <ImageView
                        android:id="@+id/about_arrow_right_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:gravity="end"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_right_grey" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/profile_lay_separator"
            >
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Switch
                android:id="@+id/settings_do_not_disturb_switch"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:checked="false"
                android:enabled="true"
                android:layout_margin="15dp"
                android:textSize="15sp"
                fontPath="fonts/SourceSansPro-Semibold.ttf"
                android:textColor="@color/text_dark_color"
                android:text="@string/DoNotDisturb" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/profile_lay_separator"
            >
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_platform"
            >
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:textColor="@color/contact_soft_grey"
                android:text="@string/sharing_settings" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/profile_lay_separator"
            >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Switch
                android:id="@+id/setting_share_current_time_switch"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:checked="true"
                android:enabled="true"
                android:layout_margin="15dp"
                android:textSize="15sp"
                fontPath="fonts/SourceSansPro-Semibold.ttf"
                android:textColor="@color/text_dark_color"
                android:text="@string/sharecurrenttime" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/profile_lay_separator"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_platform"
            >
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:textColor="@color/contact_soft_grey"
                android:text="@string/about" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/profile_lay_separator"
            >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/button_about_mycomms"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:orientation="horizontal">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/btnAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        fontPath="fonts/SourceSansPro-Semibold.ttf"
                        android:textColor="@color/text_dark_color"
                        android:text="@string/about_my_comms" />
                </LinearLayout>


                1<LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:layout_gravity="center"
                              android:gravity="end"
                    >
                    <ImageView
                        android:id="@+id/about_arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:gravity="end"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_right_grey" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/profile_lay_separator"
        >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="bottom"
        >

        <Button
            android:id="@+id/btLogout"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_margin="20dp"
            android:textSize="24sp"
            android:background="@drawable/bt_red_style"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textAllCaps="false"
            android:text="@string/Logout"
            fontPath="fonts/SourceSansPro-Semibold.ttf"
            android:textColor="#ffffff" />
    </RelativeLayout>
</LinearLayout>