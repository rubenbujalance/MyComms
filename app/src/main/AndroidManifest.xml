<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vodafone.mycomms">

    <!-- *********** -->
    <!-- Permissions -->
    <!-- *********** -->

    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <!-- *********** -->
    <!-- Appl -->
    <!-- *********** -->

    <application
        android:name=".MycommsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vodafone.mycomms.Login1Activity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.vodafone.mycomms.LoginSignupActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vodafone.mycomms.SignupMailActivity"
            android:label="@string/title_activity_signup_mail" >
        </activity>
        <activity
            android:name="com.vodafone.mycomms.SignupNameActivity"
            android:label="@string/title_activity_signup_name" >
        </activity>
        <activity
            android:name="com.vodafone.mycomms.SignupPassActivity"
            android:label="@string/title_activity_singup_pass" >
        </activity>
        <activity
            android:name="com.vodafone.mycomms.SignupPhoneActivity"
            android:label="@string/title_activity_signup_phone" >
        </activity>
    </application>

</manifest>
