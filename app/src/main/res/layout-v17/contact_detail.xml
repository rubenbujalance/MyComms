<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/istanbul_bg_blur"
    android:gravity="bottom"
    android:baselineAligned="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container"
            android:weightSum="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/header"
                android:layout_marginBottom="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="6"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/topHeader"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ivBtBack"
                        android:src="@drawable/btn_back_white"
                        android:layout_weight="5" />

                    <ImageView
                        android:layout_width="264dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/avatar"
                        android:src="@drawable/cartoon_round_contact_image_example"
                        android:adjustViewBounds="false"
                        android:layout_weight="1.55" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:id="@+id/iconStatus"
                            android:background="@drawable/ico_sun_white" />

                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="29dp"
                            android:text="20:46"
                            android:id="@+id/clock4"
                            android:layout_gravity="right"
                            android:textColor="#ffffffff" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:id="@+id/bottomHeader">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingLeft="20dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.93"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:text="Smith Doe, John"
                                    android:id="@+id/contact_contact_name"
                                    android:textIsSelectable="false"
                                    android:textSize="@dimen/abc_text_size_large_material"
                                    android:textColor="#ffffffff"
                                    android:textStyle="bold"
                                    android:textAlignment="gravity"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:layout_width="165dp"
                                    android:layout_height="match_parent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="London, UK (2 days ago)"
                                    android:id="@+id/contact_location"
                                    android:textColor="#ffffff"
                                    android:textAlignment="gravity"
                                    android:layout_gravity="center" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dcdde0"
                android:id="@+id/content"
                android:weightSum="1"
                android:focusable="false"
                android:paddingBottom="40dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <include
                        layout="@layout/toolbar_contact_detail"
                        android:id="@+id/include"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ProfileBox"
                    android:background="@drawable/roundborder"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        style="@style/TextViewProfile"
                        android:id="@+id/contact_phone_number_label"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/EditViewProfile"
                        android:hint="Phone Number"
                        android:text="+34 684503080"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:layout_below="@+id/contact_phone_number_label"
                        android:id="@+id/contact_phone_number"
                        android:enabled="false"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ProfileBox"
                    android:background="@drawable/roundborder"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        style="@style/TextViewProfile"
                        android:id="@+id/contact_email_label"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/EditViewProfile"
                        android:hint="Email"
                        android:text="john.smith@vodafone.com"
                        android:ems="10"
                        android:layout_below="@+id/contact_email_label"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/contact_email"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundborder"
                    style="@style/ProfileBox"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewProfile"
                        android:text="Company"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/EditViewProfile"
                        android:hint="Company name"
                        android:id="@+id/contact_company"
                        android:text="MyComms Corp." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/roundborder"
                    style="@style/ProfileBox"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewProfile"
                        android:text="Position"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/EditViewProfile"
                        android:hint="Position"
                        android:id="@+id/contact_position"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/roundborder"
                    style="@style/ProfileBox"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewProfile"
                        android:text="Department"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/EditViewProfile"
                        android:hint="Department"
                        android:id="@+id/contact_department"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/roundborder"
                    style="@style/ProfileBox"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewProfile"
                        android:text="Office Location"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/EditViewProfile"
                        android:hint="742, Evergreen Terrace"
                        android:id="@+id/contact_office_location"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/roundborder"
                    style="@style/ProfileBox"
                    android:orientation="vertical"
                    android:id="@+id/contact_additional_info_box"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewProfile"
                        android:text="Additional Information"
                        android:id="@+id/contact_additional_info_label"
                        />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/EditViewProfile"
                        android:hint="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus volutpat ante sit amet ligula porttitor, a rhoncus tortor accumsan."
                        android:lines="3"
                        android:id="@+id/contact_additional_info"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:id="@+id/bottom">

        <!-- Footer -->
        <!--<RelativeLayout android:id="@+id/footer"
            android:layout_width="fill_parent" android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/contentFooter"
                android:focusableInTouchMode="true">

                <include android:id="@+id/app_footer" layout="@layout/toolbar_footer"/>

            </LinearLayout>

        </RelativeLayout>-->

    </LinearLayout>
</LinearLayout>