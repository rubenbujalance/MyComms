<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_blurred">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="34dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ivBtBack"
        android:src="@drawable/icon_left_white"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_connection_layout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <include
            android:id="@+id/layout_connection_not_available"
            layout="@layout/layout_connection_not_available"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/contact_constellation"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/ivBtBack"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/round_border_white_transparent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom ="10dp"
        android:layout_marginTop="39dp" android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/ContactDetailInfoTextView"
                    android:layout_width="wrap_content"
                    android:id="@+id/contact_contact_name"
                    android:textSize="28sp"
                    tools:text="James Bond"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btFavourite"
                    android:src="@mipmap/icon_favorite_colour"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="8dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/contact_contact_name"
                    android:layout_toEndOf="@+id/contact_contact_name"/>
            </RelativeLayout>

            <TextView
                style="@style/ContactDetailInfoTextView"
                android:id="@+id/contact_position"
                android:textSize="18sp"
                tools:text="Secret Agent"/>
            <TextView
                style="@style/ContactDetailInfoTextView"
                android:id="@+id/contact_company"
                android:textSize="18sp"
                tools:text="MI6"/>
            <TextView
                style="@style/ContactDetailInfoTextView"
                android:id="@+id/contact_office_location"
                android:textSize="18sp"
                tools:text="London UK"/>
        </LinearLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1">
                <TextView
                    style="@style/ContactDetailInfoTextView"
                    android:textSize="12sp"
                    android:text="@string/contact_current_location"/>
                <TextView
                    style="@style/ContactDetailInfoTextView"
                    android:id="@+id/contact_country"
                    android:textSize="16sp"
                    tools:text="Macau"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1">
                <TextView
                    style="@style/ContactDetailInfoTextView"
                    android:textSize="12sp"
                    android:text="@string/contact_last_seen"/>
                <TextView
                    style="@style/ContactDetailInfoTextView"
                    android:textSize="16sp"
                    android:id="@+id/contact_last_seen"
                    tools:text="21h ago"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView17"
                        android:src="@mipmap/icon_moon_grey"
                        android:paddingBottom="8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        style="@style/ContactDetailInfoTextView"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/contact_current_time"
                        android:id="@+id/textView18"
                        android:layout_toRightOf="@+id/imageView17"
                        android:layout_toEndOf="@+id/imageView17"
                        />
                    <TextView
                        style="@style/ContactDetailInfoTextView"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        tools:text="01:50"
                        android:id="@+id/contact_local_time"
                        android:layout_below="@+id/textView18"
                        android:layout_alignLeft="@+id/textView18"
                        android:layout_alignStart="@+id/textView18"
                        android:layout_marginLeft="14dp"
                        android:layout_marginStart="14dp"/>
                </RelativeLayout>
            </LinearLayout>

        </TableRow>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:text="@string/contact_details"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView19"
        android:layout_above="@+id/imageView18"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="34dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_details"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView18"/>

</RelativeLayout>