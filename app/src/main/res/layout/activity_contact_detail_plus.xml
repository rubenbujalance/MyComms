<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/bg_blurred05"
              tools:context="com.vodafone.mycomms.contacts.detail.ContactDetailsPlusActivity">

    <LinearLayout
        style="@style/ContactDetailPlusLinear"
        android:background="@android:color/transparent">

        <com.vodafone.mycomms.custom.CircleImageView
            android:id="@+id/contact_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/profile_mock_avatar"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:text="Natasha Romanova"/>
            <TextView
                android:id="@+id/contact_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="Spy Master Avenger"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/ContactDetailPlusLinear"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="3">
            <TextView
                style="@style/ContactDetailPlusLabel"
                android:text="@string/phone_lower"/>
            <TextView
                android:id="@+id/contact_phone"
                style="@style/ContactDetailPlusTextValue"
                tools:text="(481) 516 2342"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/btn_chat"
            android:layout_weight="1"
            style="@style/ContactDetailPlusIcon"
            android:src="@drawable/btn_chat_white"/>
        <ImageView
            android:id="@+id/btn_sms"
            android:layout_weight="1"
            style="@style/ContactDetailPlusIcon"
            android:src="@drawable/btn_phone_white"/>

    </LinearLayout>

    <LinearLayout
        style="@style/ContactDetailPlusLinear"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="3">
            <TextView
                style="@style/ContactDetailPlusLabel"
                android:text="@string/email_lower"/>
            <TextView
                android:id="@+id/contact_email"
                style="@style/ContactDetailPlusTextValue"
                tools:text="(481) 516 2342"/>
        </LinearLayout>
        <ImageView
            android:layout_weight="1"
            style="@style/ContactDetailPlusIcon"
            android:src="@drawable/btn_mail_white"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/btn_email"
            android:layout_weight="1"
            style="@style/ContactDetailPlusIcon"
            android:src="@drawable/btn_mail_white"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="5"
        style="@style/ContactDetailPlusLinear">
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                style="@style/ContactDetailPlusLabel"
                android:text="@string/office_location_lower"/>
            <TextView
                android:id="@+id/contact_location"
                style="@style/ContactDetailPlusTextValue"
                tools:text="Stark Tower\n5th Avenue New York"/>
        </LinearLayout>
        <ImageView
            android:layout_weight="1"
            style="@style/ContactDetailPlusIcon"
            android:src="@drawable/btn_mail_white"
            android:visibility="invisible"/>
        <ImageView
            android:layout_weight="1"
            style="@style/ContactDetailPlusIcon"
            android:src="@drawable/btn_location_white"/>
    </LinearLayout>

</LinearLayout>
