<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mycomms="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    mycomms:theme="@style/ActionBarThemeOverlay"
    mycomms:contentInsetEnd="0dp"
    mycomms:contentInsetStart="0dp"
    android:gravity="top"
    mycomms:titleTextAppearance="@style/ActionBar.TitleText">
    <ImageButton
        android:id="@+id/back_button"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_back_white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" >
        <ImageView
            android:id="@+id/user_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cartoon_round_contact_image_example" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@+id/user_img"
            android:layout_toEndOf="@+id/user_img"
            android:visibility="gone">
            <TextView
                android:id="@+id/usr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Jack Sheppard"
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/usr_last_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:text="Seen long time ago"
                android:textSize="11sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.Toolbar>
