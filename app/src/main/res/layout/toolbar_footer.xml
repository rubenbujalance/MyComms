<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mycomms="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    mycomms:theme="@style/ActionBarThemeOverlay"
    android:gravity="top"
    android:background="@color/grey_toolbar"
    mycomms:titleTextAppearance="@style/ActionBar.TitleText">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:weightSum="3"
        android:background="@android:color/transparent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/footer_profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/icon_tabbar_contacts_unselected"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal">
            <ImageView
            android:id="@+id/footer_dashboard"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/icon_tabbar_quickaction_unselected"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal" >
            <ImageView
                android:id="@+id/footer_coming_soon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/icon_create_event_date_time"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.Toolbar>
