<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="70dp"
    android:layout_width="70dp"
              android:paddingTop="4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chat_list_item_badge_unread"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textSize="12sp"
        android:text="0"
        android:textColor="#ffffffff"
        android:padding="5dp"
        android:layout_gravity="center|top"
        android:background="@mipmap/blue"
        android:gravity="center_vertical|center_horizontal"
        />

    <TextView android:id="@+id/chat_list_item_last_event_day"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:textSize="10dip"
        android:text="@string/dummyShortDay"
        android:textColor="@color/contact_soft_blue_text"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />
</LinearLayout>