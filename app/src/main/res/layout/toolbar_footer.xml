<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mycomms="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    mycomms:theme="@style/ActionBarThemeOverlay"
    mycomms:contentInsetEnd="0dp"
    mycomms:contentInsetStart="0dp"
    android:gravity="top"
    android:background="@color/grey_toolbar"
    mycomms:titleTextAppearance="@style/ActionBar.TitleText">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:background="@android:color/transparent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/footer_contacts_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/toolbar_selected_item"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/footer_contacts"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_tabbar_contacts_selected"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/footer_dashboard_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal">
            <ImageView
            android:id="@+id/footer_dashboard"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_tabbar_quickaction_unselected"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/footer_recents_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal" >
            <ImageView
                android:id="@+id/footer_recents"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_create_event_date_time"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.Toolbar>
