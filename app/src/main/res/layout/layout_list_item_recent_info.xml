<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_height="wrap_content"
              android:layout_width="70dp"
              android:paddingRight="12dp"
              android:paddingEnd="12dp"
    >

    <ImageView android:id="@+id/list_item_recent_type_image"
        android:paddingTop="8dp"
        android:paddingBottom="7dp"
        android:layout_gravity="right"
        android:layout_width="45dp"
        android:layout_height="45dp"
        tools:src="@drawable/ic_enrroll_mail_white"
        />
    <!-- Local Time -->
    <TextView android:id="@+id/list_item_recent_info_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:textSize="12sp"
        android:orientation="vertical"
        android:layout_gravity="right"
        tools:text="@string/dummyHour"
        android:textColor="@color/contact_soft_grey"
        />


</LinearLayout>