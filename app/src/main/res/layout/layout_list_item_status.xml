<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_height="match_parent"
              android:layout_width="70dp"
              android:paddingRight="12dp"
    >

    <ImageView android:id="@+id/list_item_image_status_daynight"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_gravity="right"
        android:layout_width="35dp"
        android:layout_height="35dp"
               tools:src="@drawable/icon_sun"
        />
    <!-- Local Time -->
    <TextView android:id="@+id/list_item_status_local_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:textSize="10dip"
        android:orientation="vertical"
        android:layout_gravity="right"
              tools:text="@string/dummyHour"
        android:textColor="@color/contact_soft_blue_text"
        />
    <TextView
        android:id="@+id/list_item_status_local_country"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:textSize="10dip"
        android:orientation="vertical"
        android:layout_gravity="right"
        tools:text="@string/dummyCountry"
        android:gravity="right"
        android:textColor="@color/contact_soft_blue_text"
        />
</LinearLayout>