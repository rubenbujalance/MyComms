<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

<!-- Name Label -->
<TextView
    android:id="@+id/list_item_content_name"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dip"
    android:textSize="18sp"
    tools:text="@string/dummyUser"
    android:textColor="@color/contact_soft_black"
    fontPath="fonts/SourceSansPro-Semibold.ttf"
    />

<!-- Occupation -->
<TextView
    android:id="@+id/list_item_content_position"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:paddingBottom="2dp"
    android:textSize="15sp"
    android:lines="2"
    android:maxLines="2"
    tools:text="@string/dummyChat1"
    android:textColor="@color/contact_soft_grey"
    />

</LinearLayout>
