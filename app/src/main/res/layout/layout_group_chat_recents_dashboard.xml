<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="66dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="13dp"
    android:layout_marginEnd="13dp"
    android:visibility="invisible"
    android:id="@+id/recent_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/app_bar"
            layout="@layout/layout_multi_chat_avatar_60"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/type_recent"
            android:layout_alignTop="@+id/app_bar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:visibility="invisible"
            android:background="@mipmap/icon_notification_chat_grey"
            android:longClickable="false" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            tools:text="0"
            android:id="@+id/unread_messages"
            android:layout_alignTop="@+id/app_bar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textColor="#ffffffff"
            android:background="@mipmap/blue"
            android:textSize="12sp"
            android:visibility="invisible"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Brian Anderton"
            android:id="@+id/group_chat_recent_first_name"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_below="@+id/app_bar"
            android:gravity="center_horizontal"
            android:ellipsize="marquee"
            android:lines="2"/>

    </RelativeLayout>

</LinearLayout >